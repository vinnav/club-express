extends layout

block content
  h2.text-center.mt-3.mb-3= title
  form.mx-auto(action="" method="POST" style="max-width:35rem")
    .form-group
      label(for="content") Content
      textarea#text.d-block.form-control(name="content", cols="30", rows="10")= message ? message.content : ""
    button.btn.btn-dark(type="submit") Submit Message
  if errors
    for error in errors
      .alert.alert-danger.mx-auto(role="alert")!= error.msg